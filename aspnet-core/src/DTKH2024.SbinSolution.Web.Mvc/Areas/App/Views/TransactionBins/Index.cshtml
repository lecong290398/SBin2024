@using DTKH2024.SbinSolution.Authorization
@using DTKH2024.SbinSolution.Web.Areas.App.Models.TransactionBins
@using DTKH2024.SbinSolution.Web.Areas.App.Startup
@model TransactionBinsViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Common.TransactionBins;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/TransactionBins/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("TransactionBins")' description='@L("TransactionBinsHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_Administration_TransactionBins_Create))
    {
    <button id="CreateNewTransactionBinButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewTransactionBin")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="TransactionBinsTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetTransactionBinsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="TransactionCodeFilterId">@L("TransactionCode")</label>
                        <input type="text" class="form-control reload-on-keyup" name="transactionCodeFilter" id="TransactionCodeFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="DeviceNameFilterId">(@L("Device")) @L("Name")</label>
                        <input type="text" class="form-control" name="deviceNameFilter" id="DeviceNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="UserNameFilterId">(@L("User")) @L("Name")</label>
                        <input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="TransactionStatusNameFilterId">(@L("TransactionStatus")) @L("Name")</label>
                        <input type="text" class="form-control" name="transactionStatusNameFilter" id="TransactionStatusNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="TransactionBinsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("PlastisQuantity")</th>
                            <th>@L("PlastisPoint")</th>
                            <th>@L("MetalQuantity")</th>
                            <th>@L("MetalPoint")</th>
                            <th>@L("OrtherQuantity")</th>
                            <th>@L("ErrorPoint")</th>
                            <th>@L("TransactionCode")</th>
                            <th>@L("DeviceName")</th>
                            <th>@L("UserName")</th>
                            <th>@L("TransactionStatusName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>