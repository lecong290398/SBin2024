@using DTKH2024.SbinSolution.Authorization
@using DTKH2024.SbinSolution.Web.Areas.App.Models.OrderHistories
@using DTKH2024.SbinSolution.Web.Areas.App.Startup
@model OrderHistoriesViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Common.OrderHistories;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/OrderHistories/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("OrderHistories")' description='@L("OrderHistoriesHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_OrderHistories_Create))
    {
    <button id="CreateNewOrderHistoryButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewOrderHistory")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="OrderHistoriesTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetOrderHistoriesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="UserNameFilterId">(@L("User")) @L("Name")</label>
                        <input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="TransactionBinTransactionCodeFilterId">(@L("TransactionBin")) @L("TransactionCode")</label>
                        <input type="text" class="form-control" name="transactionBinTransactionCodeFilter" id="TransactionBinTransactionCodeFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="WareHouseGiftCodeFilterId">(@L("WareHouseGift")) @L("Code")</label>
                        <input type="text" class="form-control" name="wareHouseGiftCodeFilter" id="WareHouseGiftCodeFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="HistoryTypeNameFilterId">(@L("HistoryType")) @L("Name")</label>
                        <input type="text" class="form-control" name="historyTypeNameFilter" id="HistoryTypeNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="OrderHistoriesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("Description")</th>
                            <th>@L("Reason")</th>
                            <th>@L("Point")</th>
                            <th>@L("UserName")</th>
                            <th>@L("TransactionBinTransactionCode")</th>
                            <th>@L("WareHouseGiftCode")</th>
                            <th>@L("HistoryTypeName")</th>
                            <th>@L("CreationTime")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>