@using DTKH2024.SbinSolution.Authorization
@using DTKH2024.SbinSolution.Web.Areas.App.Models.Products
@using DTKH2024.SbinSolution.Web.Areas.App.Startup
@model ProductsViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Common.Products;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/Products/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("Products")' description='@L("ProductsHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_Administration_Products_Create))
    {
    <button id="CreateNewProductButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewProduct")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="ProductsTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetProductsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="ProductNameFilterId">@L("ProductName")</label>
                        <input type="text" class="form-control reload-on-keyup" name="productNameFilter" id="ProductNameFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="ProductTypeNameFilterId">(@L("ProductType")) @L("Name")</label>
                        <input type="text" class="form-control" name="productTypeNameFilter" id="ProductTypeNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="BrandNameFilterId">(@L("Brand")) @L("Name")</label>
                        <input type="text" class="form-control" name="brandNameFilter" id="BrandNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="ProductsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("ProductName")</th>
                            <th>@L("TimeDescription")</th>
                            <th>@L("ApplicableSubjects")</th>
                            <th>@L("Regulations")</th>
                            <th>@L("UserManual")</th>
                            <th>@L("ScopeOfApplication")</th>
                            <th>@L("SupportAndComplaints")</th>
                            <th>@L("Description")</th>
                            <th>@L("Image")</th>
                            <th>@L("ProductTypeName")</th>
                            <th>@L("BrandName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>